<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MKGo.ItemPage"
             Title="{Binding Title}">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout VerticalOptions="StartAndExpand" Padding="20">
        <Label Text="Title"/>
        <Entry x:Name="titleEntry" Text="{Binding Title}"/>
        <Label Text="{Binding ImageSource}"/>
        <Image Source="{Binding ImageSource}" />
    
        <Label Text="Description" />
        <Entry x:Name="descriptionEntry" Text="{Binding Description}"/>
        <Button Text="Save" Clicked="saveClicked"/>
        <Button Text="Delete" Clicked="deleteClicked"/>
        <Button Text="Cancel" Clicked="cancelClicked"/>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>